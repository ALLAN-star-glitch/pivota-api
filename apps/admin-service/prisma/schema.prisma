// ===================== GENERATOR & DATASOURCE =====================

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===================== ROLES =====================

model Role {
  id          String   @id @default(cuid())
  name        String
  description String?

  roleType    String   @unique
  scope       String
  status      String   @default("Active")
  immutable   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userRoles       UserRole[]
  rolePermissions RolePermission[]
  roleModules     RoleModule[]
}

// ===================== PERMISSIONS =====================

model Permission {
  id          String   @id @default(cuid())
  name        String
  action      String   @unique
  description String?

  moduleId    String?
  module      Module?   @relation(fields: [moduleId], references: [id])

  system      Boolean   @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rolePermissions RolePermission[]
}

// ===================== USER → ROLE =====================

model UserRole {
  id       String   @id @default(cuid())
  userUuid String   @unique
  roleId   String

  role Role @relation(fields: [roleId], references: [id])
}

// ===================== ROLE → PERMISSION =====================

model RolePermission {
  id           String   @id @default(cuid())
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@unique([roleId, permissionId])
}

// ===================== MODULES =====================

model Module {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  system      Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  permissions   Permission[]
  planModules   PlanModule[]
  roleModules   RoleModule[]
  userModules   UserModule[]
}

// ===================== PLANS =====================

model Plan {
  id            String      @id @default(cuid())
  name          String      @unique
  slug          String        @unique
  description   String?
  totalListings Int         @default(0)
  features      String
  creatorId     String

  isPremium     Boolean  @default(false)

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  planModules   PlanModule[]
  subscriptions Subscription[]

  @@index([creatorId])
}

// ===================== PLAN → MODULE (with listingLimit) =====================

model PlanModule {
  id           String   @id @default(cuid())
  planId       String
  moduleId     String
  restrictions String? // Store all restrictions (listing limits, isAllowed, etc.) in JSON

  plan   Plan   @relation(fields: [planId], references: [id])
  module Module @relation(fields: [moduleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([planId, moduleId])
}



// ===================== ROLE → MODULE =====================

model RoleModule {
  id         String  @id @default(cuid())
  roleId     String
  moduleId   String
  assignable Boolean @default(false)

  role   Role   @relation(fields: [roleId], references: [id])
  module Module @relation(fields: [moduleId], references: [id])

  @@unique([roleId, moduleId])
}

// ===================== USER → MODULE =====================

model UserModule {
  id         String  @id @default(cuid())
  userUuid   String
  moduleId   String
  verified   Boolean  @default(false)
  approvedBy String?
  entityType String?
  orgName    String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  module Module @relation(fields: [moduleId], references: [id])
}

// ===================== SUBSCRIPTIONS =====================

// ===================== SUBSCRIPTIONS =====================
model Subscription {
  id           String   @id @default(cuid())
  userUuid     String               // Reference to user in user service
  planId       String?              // FK to Plan, optional for listing-specific subscriptions
  type         String   @default("PLAN") // PLAN, LISTING, LISTING_GROUP, MODULE
  entityIds    String[]             // can have 0, 1 or more entity IDs ... for PLAN type, ofcourse the entity entry is zero
  totalAmount  Float?               // total cost of subscription (for groups or modules)
  currency     String?              // currency code, e.g., KES, USD
  status       String   @default("ACTIVE") // ACTIVE, PARTIALLY_PAID, CANCELLED, EXPIRED
  billingCycle String?
  amountPaid   Float?               // optional partial payment
  startedAt    DateTime @default(now())
  expiresAt    DateTime
  endedAt      DateTime? 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  plan         Plan?    @relation(fields: [planId], references: [id])
}




