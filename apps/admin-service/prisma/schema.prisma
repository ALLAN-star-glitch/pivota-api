// ===================== GENERATOR & DATASOURCE =====================

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===================== ROLES =====================

model Role {
  id          String   @id @default(cuid())
  name        String
  description String?

  roleType    String   @unique
  scope       String
  status      String   @default("Active")
  immutable   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userRoles       UserRole[]
  rolePermissions RolePermission[]
  roleModules     RoleModule[]
}

// ===================== PERMISSIONS =====================

model Permission {
  id          String   @id @default(cuid())
  name        String
  action      String   @unique
  description String?

  moduleId    String?
  // Cascade here: If module is deleted, delete its permissions
  module      Module?   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  system      Boolean   @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rolePermissions RolePermission[]
}

// ===================== USER → ROLE =====================

model UserRole {
  id       String   @id @default(cuid())
  userUuid String   @unique
  roleId   String

  role Role @relation(fields: [roleId], references: [id])
}

// ===================== ROLE → PERMISSION =====================

model RolePermission {
  id           String   @id @default(cuid())
  roleId       String
  permissionId String

  // Cascade here: If role or permission is deleted, remove the mapping
  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}

// ===================== MODULES =====================

model Module {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  system      Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  permissions   Permission[]
  planModules   PlanModule[]
  roleModules   RoleModule[]
  userModules   UserModule[]
}

// ===================== PLANS =====================

model Plan {
  id            String      @id @default(cuid())
  name          String      @unique
  slug          String      @unique
  description   String?
  totalListings Int         @default(0)
  features      String      // Store JSON: prices, support level, etc.
  creatorId     String

  isPremium     Boolean     @default(false)

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  planModules   PlanModule[]
  subscriptions Subscription[]

  @@index([creatorId])
}

// ===================== PLAN → MODULE (Restrictions) =====================

model PlanModule {
  id           String   @id @default(cuid())
  planId       String
  moduleId     String
  restrictions String? 

  // Cascade here: If plan or module is deleted, remove restrictions
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)
  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([planId, moduleId])
}

// ===================== ROLE → MODULE =====================

model RoleModule {
  id         String  @id @default(cuid())
  roleId     String
  moduleId   String
  assignable Boolean @default(false)

  // Cascade here: If role or module is deleted, remove visibility mapping
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([roleId, moduleId])
}

// ===================== USER → MODULE =====================

model UserModule {
  id         String  @id @default(cuid())
  userUuid   String
  moduleId   String
  verified   Boolean  @default(false)
  approvedBy String?
  entityType String?
  orgName    String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Cascade here: If module is deleted, remove user activation status
  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

// ===================== SUBSCRIPTIONS =====================

model Subscription {
  id           String   @id @default(cuid())
  accountUuid  String?               
  planId       String?              
  type         String   @default("PLAN") // PLAN, LISTING, MODULE
  entityIds    String[]             
  totalAmount  Float?               
  currency     String?  @default("KES")
  status       String   @default("ACTIVE") // ACTIVE, PARTIALLY_PAID, EXPIRED
  billingCycle String?
  amountPaid   Float?               
  startedAt    DateTime @default(now())
  expiresAt    DateTime
  endedAt      DateTime? 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  plan         Plan?    @relation(fields: [planId], references: [id])

  @@index([accountUuid])
  @@index([status])
}

// ===================== AUDIT LOGS =====================

model AuditLog {
  id          String   @id @default(cuid())
  userUuid    String?
  action      String
  entity      String
  entityId    String?
  performedBy String?
  createdAt   DateTime @default(now())
}