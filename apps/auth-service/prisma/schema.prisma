generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Credential {
  id            Int       @id @default(autoincrement())
  userUuid      String    @unique        // The unique anchor across all services
  
  // --- Core Identity ---
  email         String    @unique        // Necessary here for fast lookup during Login
  passwordHash  String

  // --- Security State ---
  mfaSecret     String?
  mfaEnabled    Boolean   @default(false)
  
  // --- Account Protection ---
  failedAttempts Int      @default(0)
  lockoutExpires DateTime?
  lastLoginAt    DateTime?
  
  // --- Audit & Lifecycle ---
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Session {
  id           Int       @id @default(autoincrement())
  userUuid     String                 // links to user via UUID
  tokenId      String    @unique @default(uuid())
  hashedToken  String
  device       String?
  ipAddress    String?
  userAgent    String?
  os           String?
  revoked      Boolean   @default(false)
  deletedAt    DateTime?
  createdAt    DateTime  @default(now())
  expiresAt    DateTime

  @@index([userUuid])
  @@index([revoked])
  @@index([expiresAt])
}
