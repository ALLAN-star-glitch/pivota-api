generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Credential {
  id            Int       @id @default(autoincrement())
  userUuid      String    @unique
  email         String    @unique
  passwordHash  String

  mfaSecret     String?
  mfaEnabled    Boolean   @default(false)
  
  // Keep these here: They protect the IDENTITY regardless of the device
  failedAttempts Int      @default(0)
  lockoutExpires DateTime?
  
  // Global record of the last time this user successfully authenticated
  lastLoginAt    DateTime? 

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Session {
  id           Int       @id @default(autoincrement())
  userUuid     String
  tokenId      String    @unique @default(uuid())
  hashedToken  String
  
  // Contextual Data (Already in your schema, which is good)
  device       String?
  ipAddress    String?
  userAgent    String?
  os           String?
  
  // --- RECOMMENDED ADDITION ---
  lastActiveAt DateTime  @default(now()) // Update this on every refresh/authorized request
  
  revoked      Boolean   @default(false)
  deletedAt    DateTime?
  createdAt    DateTime  @default(now())
  expiresAt    DateTime

  @@index([userUuid])
  @@index([revoked])
  @@index([expiresAt])
}